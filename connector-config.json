{
   "name": "cassandra-json-sink",
   "config": {
       "connector.class": "com.datastax.oss.kafka.sink.CassandraSinkConnector",
       "tasks.max": "1",
       "topics": "cassandra-sink",
       "contactPoints": "cass1",
       "loadBalancing.localDc": "Mars",
       "topic.json_topic.connect.json_table.mapping": "game_id=key, fen=value.fen, lm=value.lm, wc=value.wc,  bc=value.bc",
       "key.converter": "org.apache.kafka.connect.storage.StringConverter",
       "key.converter.schemas.enable": false,
       "value.converter.schemas.enable": false
   }
}



curl -X POST -H "Content-Type: application/json" "http://localhost:8083/connectors" -d '{
   "name": "cassandra-json-sink",
   "config": {
       "connector.class": "com.datastax.oss.kafka.sink.CassandraSinkConnector",
       "tasks.max": "1",
       "topics": "cassandra-sink",
       "contactPoints": "cass1",
       "loadBalancing.localDc": "Mars",
       "topic.cassandra-sink.chess.moves_by_game_id.mapping": "game_id=key, fen=value.fen, lm=value.lm, wc=value.wc,  bc=value.bc",
       "key.converter": "org.apache.kafka.connect.storage.StringConverter",
       "key.converter.schemas.enable": false,
       "value.converter.schemas.enable": false
   }
}'

 curl -X GET "http://localhost:8083/connectors/cassandra-json-sink/status"